(x-0.5) * ( 1./14. + cos(pi/90.)*(13./14.) ) + (y-0.5) * ( 1./7. * (1. - cos(pi/90.)) + 3./sqrt(14.)*sin(pi/90.) ) + (z-0.5) * ( 3./14. * (1. - cos(pi/90.)) - 2./sqrt(14.)*sin(pi/90.) ) + 0.5
(x-0.5) * ( 1./7. * (1. - cos(pi/90.)) - 3./sqrt(14.)*sin(pi/90.) ) + (y-0.5) * ( 2./7. + cos(pi/90.)*(5./7.) ) + (z-0.5) * ( 6./14. * (1. - cos(pi/90.)) + 1./sqrt(14.)*sin(pi/90.) ) + 0.5
(x-0.5) * ( 3./14. * (1. - cos(pi/90.)) + 2./sqrt(14.)*sin(pi/90.) ) + (y-0.5) * ( 6./14. * (1. - cos(pi/90.)) - 1./sqrt(14.)*sin(pi/90.) ) + (z-0.5) * ( 9./14. + cos(pi/90.)*(5./14.) ) + 0.5



